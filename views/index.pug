doctype html
head
  title
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
.container
  h1.m-3 Welcome
  form(action='/api/productos', method='post')
    .mb-3
      label.form-label(for='FormControlInput1') Titulo
      input#FormControlInput1.form-control(type='text', name='title', placeholder='Ingrese un titulo')
    .mb-3
      label.form-label(for='FormControlInput2') Thumbnail
      input#FormControlInput2.form-control(type='text', name='thumbnail', placeholder='Ingrese un thumbnail')
    .mb-3
      label.form-label(for='FormControlInput3') Precio
      input#FormControlInput3.form-control(type='text', name='price', placeholder='Ingrese un precio')
    button.btn.btn-primary Agregar
  .d-grid.gap-2.d-md-flex.justify-content-md-end
    form(action='/api/productos', method='get')
      button.btn.btn-outline-primary Obtener productos
