doctype html
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
.container
  if data.length > 0
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Titulo
                th(scope='col') Precio
                th(scope='col') Thumbnail
        tbody
            each d in data
                tr
                    th(scope='row')
                    td([href]='{i.url}')= d.titulo
                    td(scope='row')= d.precio
                    td(scope='row')= d.thumbnail
  else
    h2.m-3 No hay productos.
  form(action='/')
    button.btn.btn-dark Atras
